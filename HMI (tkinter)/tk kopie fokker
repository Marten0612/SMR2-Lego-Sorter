import tkinter  as tk 
from tkinter import ttk
from tkinter import *
from tkinter.messagebox import showinfo
from PIL import Image, ImageTk

window = tk.Tk()
window.title('BSL Bricks')
window.geometry("1300x700")
window.resizable(True, True)
# running = False
window.configure(background = "white")


def start():
    print("Hier moeten keuzevakjes komen.")

canvas=Canvas(window, width=2000, height=2000, bg = 'pink')
canvas.pack()
   
 


start_button = Button(window , text = "Start\n sorting", command = start, height = 2 , width = 10, bg = "purple" , fg = 'white'
              ,font = "Segoe 40 bold" , borderwidth = 10).place(x=20, y=20)

window.mainloop()

