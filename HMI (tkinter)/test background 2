window.configure(background = "white")

#functions of the buttons
def start():
    bakkenList = [None] * 8
    bakkenList[0] = variable_bak_1.get()
    bakkenList[1] = variable_bak_2.get()
    bakkenList[2] = variable_bak_3.get()
    bakkenList[3] = variable_bak_4.get()
    bakkenList[4] = variable_bak_5.get()
    bakkenList[5] = variable_bak_6.get()
    bakkenList[6] = variable_bak_7.get()
    bakkenList[7] = variable_bak_8.get()
    print(bakkenList)

    print("De machine start met sorteren.")
    #machine_learning_function(sort_Lego, bakkenList)
 
    time.sleep(0.5)
    window.destroy() 
    

#buttons
start_button = Button(window, text = "Start\n sorting", command = start, height = 2, width = 10, bg = "purple", fg = 'white', 
                      font = "Segoe 40 bold", borderwidth = 10).place(x=500, y=500)

#variabelen
variable_bak_1 = StringVar(window)
