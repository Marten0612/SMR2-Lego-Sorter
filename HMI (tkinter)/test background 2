import tkinter  as tk 
from tkinter import ttk
from tkinter import *
import time
from PIL import Image, ImageTk

#open window
window = tk.Tk()
window.title('BSL Bricks')
window.geometry("1300x700")
window.resizable(True, True)

file_logo = "C:\\Users\\Wendy Exterkate\\OneDrive\\Documenten\\GitHub\\SMR2-Lego-Sorter\\HMI (tkinter)\\red-lego-background.jpg"

canvas1 = Canvas(window, width=1300, height=100)
img = ImageTk.PhotoImage(Image.open(file_logo))


canvas1.pack()
canvas1.create_image(0, 0, image = img)
canvas1.create_image(900, 0, image = img)
canvas1.create_text(400, 50, text = "BSL BRICKS")
'''
